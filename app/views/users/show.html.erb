<h1><%= @user.name %></h1>
<hr>
<h4>Created events:</h4>
<ul>
  <% @user.created_events.each do |event| %>
    <li><%= event.name %></li>
    <p><%= event.description %></p>
    <ul>
      <li><%= event.address %></li>
      <li><%= event.date %></li>
    </ul>
  <% end %>
</ul>
<hr>
<h4>Upcoming events:</h4>
<ul>
  <% @user.attended_events.upcoming.each do |event| %>
    <li><%= event.name %></li>
    <p><%= event.description %></p>
    <ul>
      <li><%= event.address %></li>
      <li><%= event.date %></li>
    </ul>
  <% end %>
</ul>
<hr>
<h4>Attended events:</h4>
<ul>
  <% @user.attended_events.past.each do |event| %>
    <li><%= event.name %></li>
    <p><%= event.description %></p>
    <ul>
      <li><%= event.address %></li>
      <li><%= event.date %></li>
    </ul>
  <% end %>
</ul>
